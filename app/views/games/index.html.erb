<div class="page-header">
 <% if current_user.all_games_ended? %>
   <%= link_to new_user_game_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Game
    <% end %>
  <% end %>
  <h1>Listing games</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th></th>
            <th>Turn</th>
            <th>Phase</th>
            <th>Date</th>
            <th>Score</th>
            <th></th>
      </tr>
    </thead>

    <tbody>
      <% @games.each.with_index(1) do |game,s| %>
				<tr class="<%= "info" if !game.ended? %>">
				<td><%= s + @games.offset_value%></td>
            <td><%= game.turn %></td>
            <td><%= game.phase? %></td>
						<td><%= game.created_at.in_time_zone('Tokyo') %></td>
            <td><%= game.score %></td>
            <td><%= link_to 'Show', game %></td>
						</tr>
					<% end %>
    </tbody>
  </table>
<%= paginate @games %>
</div>

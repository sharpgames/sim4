<div class="page-header">
  <%= link_to user_games_path(user_id: current_user.id), class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <h2>Game</h2>
</div>

<dl class="dl-horizontal">
  <dt>User:</dt>
  <dd><%= @game.user.name %></dd>
	
  <dt>Score:</dt>
  <dd><%= @game.score %></dd>

  <dt>Turn:</dt>
  <dd><%= @game.turn %></dd>

  <dt>Phase:</dt>
  <dd><%= @game.phase? %></dd>

</dl>

<% if @game.ended? %>
	<%= render 'shared/result'%>
<% elsif @game.phase? == :mission %>
	<%= render 'shared/mission_form'%>
<% else %>
	<%= render 'shared/watch_form'%>
<% end %>
